<div id="posts">
  <% @posts.each do|post| %>
  <div id="post">
    <h3>
      <% if post.link.present? %>
        <%= link_to post.title, post.link %>
      <% else %>
        <%= post.title %>
      <% end %>
    </h3>
    <%= simple_format post.body %>
    <small>
      <%= post.tag_list %>
    </small>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  </div>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path %>